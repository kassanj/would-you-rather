<div class="container">
  <div class="row">
    <div class="col-md-5 m-x-auto pull-xs-none vamiddle" style="margin:0 auto; display: block"">
      <div class="card">
        <div class="card-block p-a-2">
          <h2 class="mb-1">Resend confirmation instructions</h2>
			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  			<%= devise_error_messages! %>

          <div class="input-group mb-1">
            <span class="input-group-addon">@</i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>
            <div class="actions">
    		<%= f.submit "Resend confirmation instructions", class: "btn btn-primary #{ENV['CLASS']}", style: 'width: 100%' %>
  		</div>
         
          </div>
          <% end %>
          <div class="card-footer">
            <div class="row px-1">
                <div class="col-xs-6">
                <div>Already have an account? <%= render "devise/shared/links" %></div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

