<div class="container" style="padding-top: 40px">
  <div class="row">
    <div class="col-md-5 m-x-auto pull-xs-none vamiddle" style="margin:0 auto; display: block"">
        <div class="card">
          <div class="card-block p-a-2">
            <h1>Edit Profile</h1>
            <p class="text-muted">Make changes to your account</p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="input-group mb-1">
                <span class="input-group-addon"><i class="icon-user"></i></span>
                 <%= f.text_field :first_name , autofocus: true, class: "form-control", placeholder: 'First Name' %>
            </div>
            <div class="input-group mb-1">
                <span class="input-group-addon"><i class="icon-user"></i></span>
                <%= f.text_field :last_name , autofocus: true, class: "form-control", placeholder: 'Last Name' %>
            </div>
            <div class="input-group mb-1">
              <span class="input-group-addon">@</i></span>
              <%= f.email_field :email, autofocus: true, class: "form-control",  placeholder: 'Email' %>
            </div>
            <div class="input-group mb-1">
              <span class="input-group-addon"><i class="icon-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", hint: "", required: false, placeholder: 'Password' %>
            </div>
           <!--   <small>leave it blank if you don't want to change it</small> -->
            <div class="input-group mb-2">
              <span class="input-group-addon"><i class="icon-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: false, placeholder: 'Repeat Password' %>
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            <div class="pt-1">
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary #{ENV['CLASS']}" %></p>
            </div>
            <div class="pt-1">
              <%= link_to "Back", :back %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>