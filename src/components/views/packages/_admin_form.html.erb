<%= form_for(@package) do |f| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>
      <ul>
        <% @package.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
          <label for="name">Title</label>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a title" %>
      </div>
    </div>
  </div>
  <div class="field pt-1">
    <%= f.label :description, 'Description' %><br>
    <%= f.text_area :description, class: "form-control", id: "text", maxlength: "140", style: "height: 100px"%>
    <h6 class="small text-right" id="count_message" style="padding: 0.3rem"></h6>
</div>
  <!--/row-->
  <div class="row">
   <div class="col-sm-12">
    <div class="form-group">
    <label class="form-control-label" for="appendedPrependedInput">Price</label>
      <div class="controls">
        <div class="input-prepend input-group">
            <span class="input-group-addon">$</span>
            <%= f.text_field :price, class: "form-control", value: number_with_precision(@package.price, precision: 0)   %>
            <span class="input-group-addon">.00</span>
        </div>
      </div>
    </div>
    </div>
  </div>
  <!--/row-->
  <div class="row">
    <div class="form-group col-sm-4">
        <label>Standard</label>
         <%= f.number_field :promo, class: "form-control"  %>
    </div>
    <div class="form-group col-sm-4">
        <label>Title</label>
        <%= f.number_field :title, class: "form-control"  %>
    </div>
    <div class="form-group col-sm-4">
        <label>Event</label>
        <%= f.number_field :event, class: "form-control"  %>
    </div>
  </div><br>
  <!--/row-->

  <div class="form-group">
    <label for="exampleSelect1">Package Type</label>
    <%= f.select :display, [["Custom", "custom"], ["Displayed", "displayed"], ["Retired", "retired"]], {}, {class: "form-control", id: 'exampleSelect1' } %>
  </div>

   <div class="field py-1">
    <label>Newsletter</label>
    <%= collection_check_boxes(:package, :site_ids, Site.all, :id, :name) do |b| %>
    <div class="form-check">
      <label class="form-check-label">
      <%= b.check_box(class: 'form-check-input') %>
      <%= b.label %>
      </label>
    </div>
    <% end %>
    </div>
       <%= f.button 'Submit', value: "Submit", class: "btn btn-primary", data: {"disable-with" => "<i class='fa fa-spinner fa-spin'></i> Creating..."} %>
<% end %>
