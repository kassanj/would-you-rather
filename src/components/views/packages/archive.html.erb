<div class="container">

  <div style="padding-bottom: 1rem">
    <a class="btn btn-primary" href="<%= new_package_path %>" style="float: right">
    <i class="fa fa-plus" aria-hidden="true"></i> New Package
  </a>
  </div>
<nav class="nav nav-tabs" id="myTab" role="tablist">
  <a class="nav-item nav-link active" id="nav-packages-tab" data-toggle="tab" href="#nav-packages" role="tab" aria-controls="nav-packages" aria-expanded="true">Displayed</a>
  <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home">Custom</a>
  <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile">Retired</a>
</nav>

<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-packages" role="tabpanel" aria-labelledby="nav-packages-tab"> 
      <table class="table table-outline table-hover table-striped">
        <thead class="thead-default">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
       <tbody class="sortable"> 
      <% sortable_fetch(@displayed_packages) do |package, id_tag| %>
          <tr id="<%= id_tag %>"> 
            <td>
              <div><strong><%= link_to package.name, package %></strong></div>
              <div class="small">
                <%= to_cities(package.site_ids, prefix: 'Used by ') %>
              </div></td>
            <td>
              <div><%= package.description %> 
              </div>
              <div class="small text-muted"><%= package.promo %> standards, <%= package.title %> titles, <%= package.event %> events</div>
            </td>
            <td><strong><%= number_to_currency(package.price) %></strong></td>
            <td><%= edit_icon(edit_package_path(package)) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
  <div class="tab-pane fade" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab"> 
      <table class="table table-outline table-hover table-striped">
        <thead class="thead-default">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
       <tbody class="sortable"> 
         <% sortable_fetch(@custom_packages) do |package, id_tag| %>
          <tr id="<%= id_tag %>"> 
            <td>
              <div><strong><%= link_to package.name, package %></strong></div>
              <div class="small">
                <%= to_cities(package.site_ids, prefix: 'Used by ') %>
              </div></td>
            <td>
              <div><%= package.description %> 
              </div>
              <div class="small text-muted"><%= package.promo %> standards, <%= package.title %> titles, <%= package.event %> events</div>
            </td>
            <td><strong><%= number_to_currency(package.price) %></strong></td>
            <td><%= edit_icon(edit_package_path(package)) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
    <table class="table table-outline table-hover table-striped">
        <thead class="thead-default">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
       <tbody class="sortable"> 
        <% sortable_fetch(@retired_packages) do |package, id_tag| %>
          <tr id="<%= id_tag %>"> 
            <td>
              <div><strong><%= link_to package.name, package %></strong></div>
              <div class="small">
                <%= to_cities(package.site_ids, prefix: 'Used by ') %>
              </div></td>
            <td>
              <div><%= package.description %> 
              <% if package.display == true %>
                <span class="badge badge-pill badge-success">Displayed</span>
              <% end %>
              </div>
              <div class="small text-muted"><%= package.promo %> standards, <%= package.title %> titles, <%= package.event %> events</div>
            </td>
            <td><strong><%= number_to_currency(package.price) %></strong></td>
            <td><%= edit_icon(edit_package_path(package)) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>
</div>

<script>
  jQuery(document).ready(function ($) {
    $(".sortable").railsSortable();
  });
</script>
