<div class="container">
  <div class="card">
    <div class="card-header">
      <h3>Newsletters</h3>
    </div>
    <div class="card-block">
      <table class="table table-hover table-striped">
        <thead class="thead-default">
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>State</th>
          <th>Logo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.city.capitalize %></td>
        <td><%= site.state %></td>
        <td><%= image_tag(site.logo_url(:site_logo_thumb)) %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to '', edit_site_path(site), class: 'icon-pencil' %></td>
        <td><%  link_to '', site, method: :delete, class: 'icon-close', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
    </table>
    </div>
  </div><%= link_to 'New Newsletter', new_site_path, class: "btn btn-primary", style: "float: right; margin-top: 2px; max-width: 150px" %>
</div>
