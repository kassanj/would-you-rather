<!DOCTYPE html>
<html>
<head>
  <title>WhereBy.Us | Advertising</title>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Mukta+Vaani" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <link href="//cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.css" rel="stylesheet" >
  <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", "#{STRIPE_JS_HOST}/v2/" %>
  <%= Gon::Base.render_data %>
  <%= tag :meta, :name => 'stripe-key', :content => ENV['STRIPE_PUBLIC_KEY'] %>

  <script>
  !function(){var analytics=window.analytics=window.analytics||[];if(!analytics.initialize)if(analytics.invoked)window.console&&console.error&&console.error("Segment snippet included twice.");else{analytics.invoked=!0;analytics.methods=["trackSubmit","trackClick","trackLink","trackForm","pageview","identify","reset","group","track","ready","alias","debug","page","once","off","on"];analytics.factory=function(t){return function(){var e=Array.prototype.slice.call(arguments);e.unshift(t);analytics.push(e);return analytics}};for(var t=0;t<analytics.methods.length;t++){var e=analytics.methods[t];analytics[e]=analytics.factory(e)}analytics.load=function(t,e){var n=document.createElement("script");n.type="text/javascript";n.async=!0;n.src="https://cdn.segment.com/analytics.js/v1/"+t+"/analytics.min.js";var a=document.getElementsByTagName("script")[0];a.parentNode.insertBefore(n,a);analytics._loadOptions=e};analytics.SNIPPET_VERSION="4.1.0";
  analytics.load("<%= ENV['SEGMENT_TRACKER'] %>");
  analytics.page();
  }}();
 </script>

<head>

<body class="app header-fixed footer-fixed">
  <header class="app-header navbar logged-in">
    <a class="navbar-brand wbu-logo-sm" href="/"></a>
    <ul class="nav navbar-nav">
      <% if user_signed_in? && current_user.is_admin? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle px-1" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Packages<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li class="nav-item">
              <%= link_to "All Packages", all_packages_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Displayed Packages", packages_path %>
            </li>
          </ul>
        </li>
        <li class="nav-item px-1">
          <%= link_to "Calendar", calendar_path(current_user.sites[0].city) %>
        </li>
         <li class="nav-item px-1">
          <%= link_to "Newsletter", sites_path %>
        </li>
        <li class="nav-item px-1">
          <%= link_to "Orders", orders_path %>
        </li>
        <li class="nav-item px-1">
          <%= link_to "Coupons", coupons_path %>
        </li>
        <li class="nav-item px-1">
          <%= link_to "Users", users_path %>
        </li>
        <li class="nav-item px-1">
          <%= link_to "House Promos", promos_path %>
        </li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav ml-auto">
    <% if user_signed_in? && current_user.is_client? %>
      <li class="nav-item px-1">Welcome, <%= current_user.first_name.strip %>!</li>
      <li class="nav-item px-1">
        <%= link_to "My Account", current_user %>
      </li>
      <li class="nav-item px-1">
        <%= link_to "Sign Out", sign_out_path %>
      </li>
    <% elsif user_signed_in? && current_user.is_admin? %>
    <li class="nav-item px-1">
      Hi, <%= link_to current_user.first_name.strip, user_path(current_user) %>!
       <small><%= link_to '', edit_user_path(current_user), class: 'text-muted icon-pencil' %></small>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add New <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li class="nav-item">
          <%= link_to "Package", new_package_path, :class => 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "House Promo", new_house_promo_path, :class => 'nav-link' %>
        </li>
      </ul>
    </li>
    <li class="nav-item px-1">
      <%=  link_to "Sign Out", sign_out_path, :class => 'nav-link' %>
    </li>
    <% else %>
    <li class="nav-item px-1">
      <%= link_to "Sign In", new_user_session_path, :class => 'nav-link' %>
    </li>
    <% end %>
    </ul>
  </header>

  <div class="app-body">
    <!-- Main content -->
    <main class="main">
    <div class="container">

    <% flash.each do |key, value| %>
      <% case key%>
        <% when "notice" %>
            <div class='alert alert-success' role="alert"><%= value %>
         <% when "alert" %>
            <div class='alert alert-danger' role="alert"><%= value %>
         <% else %>
            <div class='alert alert-info' role="alert"><%= value %>
        <% end %>
        <a href="#" data-dismiss="alert" class="close">Ã—</a></div>
      <% end %>
      <%= yield %>

    </div>
    </main>
  </div>

  <footer class="app-footer">
    <span class="footer-link float-right pr-1"> &copy; 2017 <a href="http://whereby.us">WhereBy.Us</a></span>
    <span class="footer-link float-right pr-1"><%= link_to 'Terms and Conditions', terms_path %></span>
    <span class="footer-link float-right pr-1"><a href="mailto:sales@whereby.us(WhereBy.Us)">Contact</a></span>
    <span class="footer-link float-right pr-1"><%= link_to 'About',  "#{root_path}#about" %></span>
  </footer>
  <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
</body>

</html>
