<!-- Client and Admin Landing Page view -->
<!-- Packages By Brands -->
<div class="section-packages" id="packages">
  <div class="container">
    <h1>Packages</h1><br>
    <p>Below you'll find our current packages, with discounts up to 20% from standard prices. <br>Select the package you'd like to get startedâ€”or see how <a class="links" href="#how">advertising works</a> for more info.</p>
    <p>We also offer customized packages to fit your goals, and nonprofit discounts.<br>For those things, you'll need to talk to a friendly human on our <a class="links" href="#contact_form">business team</a>.</p><br><br>

     <!-- Loop Starts -->
     <% @group.each do |city, packages| %>
      <% site = Site.find_by(city: city) %>
      <% packages = site.packages.where(display: 'displayed').order(:price) %>
      <div class="tnt-background-block">
      <% if packages.count == 0 %>
      <% else %>
        <div class="row my-2">
              <% site.name %>
              <%= image_tag(site.logo_url, style: 'margin-left: 55px; max-height: 66px') %>
              <!-- <div class="small icon-location-pin" style="padding-left: 4px; padding-top: 60px"></div> -->
              <!-- <div class="small" style="padding-top: 58px; padding-left: 2px;"><%= city.capitalize %>, <%= site.state %></div> -->
        </div>
          <div class="row my-2">
            <% packages.each do |package| %>
              <div class="card packages col-sm-12 col-md-6 col-lg-4">
                <div class="card-block" style="position: relative; height: 360px;">
                  <h4 class="card-title"><%= package.name %></h4>
                  <medium><%= number_to_currency(package.price) %></medium>
                  <p class="card-text pt-1">
                    <% if package.promo != 0 %>
                      <%= pluralize(package.promo, 'standard promotion') %> <a href="#" class="text-muted" data-toggle="tooltip" data-html="true" data-placement="right" title="<%= render :partial => 'shared/promos/promo' %>"><i class="fa fa-question-circle" aria-hidden="true"></i></a><br>
                    <% end %>
                    <% if package.title != 0 %>
                      <%= pluralize(package.title, 'title sponsorship') %> <a href="#" class="text-muted" data-toggle="tooltip" data-html="true" data-placement="right" title="<%= render :partial => 'shared/promos/title' %>"><i class="fa fa-question-circle" aria-hidden="true"></i></a><br>
                    <% end %>
                    <% if package.event != 0 %>
                     <%= pluralize(package.event, 'event promotion') %> <a href="#" class="text-muted" data-toggle="tooltip" data-html="true" data-placement="right" title="<%= render :partial => 'shared/promos/event' %>"><i class="fa fa-question-circle" aria-hidden="true"></i></a><br>
                    <% end %>
                  </p>
                  <medium class="my-1"><%= package.description %></medium>
                  <%= link_to 'Purchase now', package, class: "btn btn-primary" %>
                </div>
               </div>
              <% end %>
              </div>
            <br>
          </div>
        <% end %> <!-- Loop Ends -->
        <% end %>
  </div>
</div>
