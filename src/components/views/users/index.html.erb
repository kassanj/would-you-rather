<div class="container">
  <div class="card">
    <div class="card-header">
      Users
    </div>
    <div class="card-block">
      <table class="table table-hover table-outline table-striped">
        <thead class="thead-default">
        <tr>
          <th class="text-xs-center"><i class="icon-people"></i></th>
          <th>Name</th>
          <th>Role</th>
          <th>Email</th>
          <th>Sites</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="text-xs-center"><div class="avatar">
              <%= image_tag avatar_url(user), class: 'img-avatar' %>
              <% if user.confirmed? %>
                <span class="avatar-status badge-success"></span>
              <% else %>
                <span class="avatar-status badge-warning"></span>
              <% end %>
            </div></td>
            <td>
              <%= link_to user.first_name + ' ' + user.last_name, user %> 
              <small><%= link_to '', edit_user_path(user), class: 'text-muted icon-pencil' %></small>
            </td>
            <td><%= user.role.name %></td>
            <td><%= user.email %></td>
            <td>
                <% if user.site_ids.count > 1 %>
                   Global
                <% else %>
                <% user.site_ids.each do |f| %>
                  <%= Site.find(f).name %><br>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to '', user, method: :delete, class: 'text-muted icon-close', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% link_to 'New User', new_user_path, class: "btn btn-primary" %>
    </div>
  </div>
  <span class="badge badge-success">Confirmed</span> <span class="badge badge-warning">Pending</span>
</div>